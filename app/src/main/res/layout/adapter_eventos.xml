<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_event_available" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evento"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textDataEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dataEvento"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/adpterLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="localEvento"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/adpterUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adpterusuario"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/adpterHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hora evento"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/adpterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uid"
            android:textColor="@color/cor_fundo_drawer" />

    </LinearLayout>
</LinearLayout>